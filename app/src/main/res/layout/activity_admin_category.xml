<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/add_slogan"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Add New Product"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_below="@id/add_slogan"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/t_shirts"
            android:layout_width="wrap_content"
            android:src="@drawable/tshirts"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:src="@drawable/sports"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/female_dresses"
            android:layout_width="wrap_content"
            android:src="@drawable/female_dresses"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/sweater"
            android:layout_width="wrap_content"
            android:src="@drawable/sweather"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_below="@id/linear1_category_layout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="82dp"
            android:src="@drawable/glasses"
            android:layout_marginStart="10dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/purse"
            android:layout_width="90dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/purses_bags"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/hats"
            android:layout_marginStart="10dp"
            android:layout_width="80dp"
            android:src="@drawable/hats"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/shoes"
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/shoess"
            android:layout_height="80dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:orientation="horizontal"
        android:layout_below="@id/linear2_category_layout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/headphones"
            android:layout_width="82dp"
            android:src="@drawable/headphoness"
            android:layout_marginStart="10dp"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="90dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/laptops"
            android:layout_height="80dp" />

        <ImageView
            android:id="@+id/watches"
            android:layout_marginStart="10dp"
            android:layout_width="80dp"
            android:src="@drawable/watches"
            android:layout_height="80dp" />


        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:src="@drawable/mobiles"
            android:layout_height="80dp" />

    </LinearLayout>


    <Button
        android:id="@+id/check_orders_btn"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:layout_above="@id/admin_logout_btn"
        android:background="@drawable/buttons"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/admin_logout_btn"
        android:text="Log Out"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="20dp"
        android:background="@drawable/buttons"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</RelativeLayout>